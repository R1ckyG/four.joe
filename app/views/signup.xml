<Alloy>
	<Window class="container">
		<Label id="firstLabel" text="First Name:"/>
		<TextField id="firstname" class="border"/>
	
		<Label id="lastLabel" text="Last Name:"/>
		<TextField id="lastname" class="border"/>

		<Label id="emailLabel" text="Email:"/>
		<TextField id="email" class="border"/>
	
		<Label id="userLabel" text="Username:"/>
		<TextField id="username" class="border"/>
	
		<Label id="passLabel" text="Password:"/>
		<TextField id="password" class="border"/>
		<Picker id="schools" selectionIndicator="true" onChange="setSchool">
			<PickerColumn id="schoolColumn">
			</PickerColumn>
		</Picker>
		<Button id="submit" text="Sign Up" onClick="onSignUp"/>
	</Window>
</Alloy>
