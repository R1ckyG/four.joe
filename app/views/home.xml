<Alloy>
  
  <Window id="index" class="container">
  <NavigationGroup id="nav" platform="ios,mobileweb" backgroundColor="white">
     <Window id="profileWin" title="My Profile">
      <Require src="studentinfo"/>
      <TableView filterAttribute="title" id="course_list" >
        <TableViewSection id="course_section">
				  <TableViewRow class="course_row" onClick="openClass">
            <Label class="course_name" text="title"/>
            <Label class="messages" text="(4)"/>
          </TableViewRow>
				</TableViewSection>
      </TableView>
      <TableView id="menu_items">
        <TableViewRow id="settings" class="course_row" onClick="openSettings">
          <Label id="settings_label" text='Settings'/>
        </TableViewRow>
        <TableViewRow id="stats" class="course_row" onClick="openStats">
          <Label id="stats_label" text='My Stats'/>
        </TableViewRow>
        <TableViewRow id="debug" class="course_row" onClick="debugClick">
          <Label id="stats_label" text='Debug'/>
        </TableViewRow>
      </TableView>
     </Window>
	</NavigationGroup>
	</Window>
</Alloy>
